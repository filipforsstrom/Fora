@inject IUserService UserService

<AuthorizeView>
    <MudButton @OnClick="Ban" Variant="Variant.Filled" StartIcon="@Icons.Material.Filled.Delete" Color="Color.Error">Delete</MudButton>
</AuthorizeView>

@code {
    private string userId;
    private async Task Ban()
    {
        await UserService.BanUser(userId);
    }
}
