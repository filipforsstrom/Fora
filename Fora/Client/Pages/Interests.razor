@page "/interests"
@inject IInterestService InterestService
@inject NavigationManager navManager

<MudTable T="InterestModel" OnRowClick="@RowClicked" Items="@InterestsList" Hover="true" LoadingProgressColor="Color.Info">
    <HeaderContent>
        <MudTh>Interest</MudTh>
    </HeaderContent>
    <RowTemplate>

        <MudTd DataLabel="Nr">@context.Name</MudTd>

    </RowTemplate>
</MudTable>

@code {
    private List<InterestModel>? InterestsList { get; set; }

    protected override async Task OnInitializedAsync()
    {
        await InterestService.GetInterests();
        InterestsList = InterestService.Interests;
    }

    private void RowClicked(TableRowClickEventArgs<InterestModel> p)
    {
        //Passes in the item which the user clicked on's interestid.
        navManager.NavigateTo($"/threads/{p.Item.Id}");
    }
}
